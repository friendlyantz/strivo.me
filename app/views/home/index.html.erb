<!-- Hero Section -->
<div class="hero min-h-screen bg-base-200">
  <div class="hero-content text-center">
    <div class="max-w-3xl">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">
        Bet on Yourself
      </h1>
      <p class="text-xl md:text-2xl mb-8">
        Personal challenges with social proof.<br>
        Let friends keep you honest.
      </p>

      <div class="flex flex-wrap gap-4 justify-center mb-12">
        <% if current_user %>
          <%= link_to "My Challenges", challenge_stories_path, class: "btn btn-primary btn-lg" %>
        <% else %>
          <%= link_to "Get Started", new_webauthn_registration_path, class: "btn btn-primary btn-lg" %>
          <%= link_to "Sign In", new_webauthn_session_path, class: "btn btn-outline btn-lg" %>
        <% end %>
      </div>

      <!-- Active Users -->
      <div class="avatar-group -space-x-6 justify-center mb-4">
        <% [1,2,3,4].each do |_| %>
          <div class="avatar">
            <div class="w-12">
              <img src="https://picsum.photos/96/96?random=<%= _ %>" alt="User avatar" />
            </div>
          </div>
        <% end %>
      </div>
      <p class="text-sm opacity-70 mb-12">
        Join <%= User.count %> people taking on challenges
      </p>
    </div>
  </div>
</div>

