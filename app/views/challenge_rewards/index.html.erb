<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6">Rewards for "<%= @challenge_story.title %>"</h1>

  <div class="flex flex-wrap gap-2 mb-6">
    <%= link_to challenge_story_path(@challenge_story) do %>
      <%= render Button::Component.new(text: "Back to Challenge", icon: :arrow_left, color: "outline") %>
    <% end %>

    <% if @current_challenge_participant %>
      <%= link_to  new_challenge_story_challenge_reward_path(@challenge_story) do %>
        <%= render Button::Component.new(text: "Pledge a New Reward", icon: :plus, color: "primary") %>
      <% end %>


      <% if !@challenge_story.completed? && @challenge_story.finished? %>
        <%= button_to "Mark Complete", complete_challenge_story_path(@challenge_story), 
                method: :patch, 
                # FIXME: styling mt/mb alignment for button_to and link_to
                class: "btn btn-success mt-2 mb-2",
                data: { turbo_confirm: "Are you sure you want to mark this challenge as complete? Can't be undone" } %>
      <% end %>
    <% end %>


  </div>

  <% if @rewards_received.empty? && @rewards_given.empty? && @rewards_others.empty? %>
    <div class="alert alert-info shadow-lg">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <span>No rewards have been pledged yet.</span>
      </div>
    </div>
  <% elsif @current_challenge_participant %>
    <% unless @rewards_received.empty? %>
      <div class="divider"></div>
      <h2 class="text-xl font-semibold mb-4">Rewards Pledged to You</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
        <% @rewards_received.each do |reward| %>
          <%= render "reward_card", reward: reward, challenge_story: @challenge_story %>
        <% end %>
      </div>
    <% end %>

    <% unless @rewards_given.empty? %>
      <div class="divider"></div>
      <h2 class="text-xl font-semibold mb-4">Rewards You've Pledged</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
        <% @rewards_given.each do |reward| %>
          <%= render "reward_card", reward: reward, challenge_story: @challenge_story %>
        <% end %>
      </div>
    <% end %>

    <% unless @rewards_others.empty? %>
      <div class="divider"></div>
      <h2 class="text-xl font-semibold mb-4">All Other Rewards</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @rewards_others.each do |reward| %>
          <%= render "reward_card", reward: reward, challenge_story: @challenge_story %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="divider"></div>
    <h2 class="text-xl font-semibold mb-4">All Rewards</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% @rewards_others.each do |reward| %>
        <%= render "reward_card", reward: reward, challenge_story: @challenge_story %>
      <% end %>
    </div>
  <% end %>
</div>
