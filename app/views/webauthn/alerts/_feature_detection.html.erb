<div class="hidden mb-6" data-controller="webauthn-feature-detection">
  <div role="alert" class="alert alert-warning">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <div>
      <h3 class="font-bold">Passkeys Not Supported</h3>
      <div class="text-sm" data-webauthn-feature-detection-target="message"></div>
      <div class="text-sm">
        Try desktop or standard browser instead
      </div>
      <%= link_to new_email_session_path do %>
        <button class="btn btn-warning gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
          or Sign in with Email
          <div class="badge badge-sm bg-error-content/20">not recommended</div>
        </button>
      <% end %>

    </div>
  </div>
</div>
